<!doctype html>
<html class="no-js h-100" lang="en">
  <head>
    <%- include('./partials/head'); -%>

  </head>
    <div class="container-fluid">
      <div class="row">
        <!-- Main Sidebar -->
        <aside class="main-sidebar col-12 col-md-3 col-lg-2 px-0">
          <div class="main-navbar">
            <nav class="navbar align-items-stretch navbar-light bg-white flex-md-nowrap border-bottom p-0">
              <a class="navbar-brand w-100 mr-0" href="#" style="line-height: 25px;">
                <div class="d-table m-auto">
                  <img id="main-logo" class="d-inline-block align-top mr-1" style="max-width: 50px;" src="img/logo_acad.png" alt="AG Dashboard">
                </div>
              </a>
              <a class="toggle-sidebar d-sm-inline d-md-none d-lg-none">
                <i class="material-icons">&#xE5C4;</i>
              </a>
            </nav>
          </div>
          <div class="nav-wrapper">
            <ul class="nav flex-column">
              <li class="nav-item">
                <a class="nav-link" onclick="home()">
                  <i class="material-icons">account_circle</i>
                  <span>Dashboard</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link " onclick="formations()">
                  <i class="material-icons">import_contacts</i>
                  <span>Formations</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link " onclick="absences()">
                  <i class="material-icons">contacts</i>
                  <span>Absences</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link " onclick="notes()">
                  <i class="material-icons">assignment</i>
                  <span>Notes</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link " onclick="documents_()">
                  <i class="material-icons">attachment</i>
                  <span>Documents</span>
                </a>
              </li>
              <li class="nav-item">
                <a class="nav-link " onclick="settings()">
                  <i class="material-icons">settings</i>
                  <span>Settings</span>
                </a>
              </li>
            </ul>
          </div>
        </aside>
        <!-- End Main Sidebar -->
        <main class="main-content col-lg-10 col-md-9 col-sm-12 p-0 offset-lg-2 offset-md-3">
          <div class="main-navbar sticky-top bg-white">
            <!-- Main Navbar -->
            <nav class="navbar align-items-stretch navbar-light flex-md-nowrap p-0">
              <form action="/search" class="main-navbar__search w-100 d-none d-md-flex d-lg-flex" method="post">
                <div class="input-group input-group-seamless ml-3">
                  <div class="input-group-prepend">
                    <div class="input-group-text">
                      <i class="fas fa-search"></i>
                    </div>
                  </div>
                  <input class="navbar-search form-control" type="text" placeholder="Rechercher un eleve..." aria-label="result" id="result" name="result"> </div>
              </form>
              <ul class="navbar-nav border-left flex-row ">
                <li class="nav-item border-right dropdown notifications">
                  <a class="nav-link nav-link-icon text-center" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <div class="nav-link-icon__wrapper">
                      <i class="material-icons">&#xE7F4;</i>
                      <span class="badge badge-pill badge-danger">2</span>
                    </div>
                  </a>
                  <div class="dropdown-menu dropdown-menu-small" aria-labelledby="dropdownMenuLink">
                    <a class="dropdown-item" href="#">
                      <div class="notification__icon-wrapper">
                        <div class="notification__icon">
                          <i class="material-icons">&#xE6E1;</i>
                        </div>
                      </div>
                      <div class="notification__content">
                        <span class="notification__category">Analytics</span>
                        <p>Your website’s active users count increased by
                          <span class="text-success text-semibold">28%</span> in the last week. Great job!</p>
                      </div>
                    </a>
                    <a class="dropdown-item" href="#">
                      <div class="notification__icon-wrapper">
                        <div class="notification__icon">
                          <i class="material-icons">&#xE8D1;</i>
                        </div>
                      </div>
                      <div class="notification__content">
                        <span class="notification__category">Sales</span>
                        <p>Last week your store’s sales count decreased by
                          <span class="text-danger text-semibold">5.52%</span>. It could have been worse!</p>
                      </div>
                    </a>
                    <a class="dropdown-item notification__all text-center" href="#"> View all Notifications </a>
                  </div>
                </li>
                <li class="nav-item dropdown">
                  <a class="nav-link dropdown-toggle text-nowrap px-3" data-toggle="dropdown" onclick="settings()" role="button" aria-haspopup="true" aria-expanded="false">
                    <img class="user-avatar rounded-circle mr-2" src="img/<% sess.IMAGE_ELEVE %>" alt="User Avatar">
                    <span class="d-none d-md-inline-block"><%- login -%></span>
                  </a>
                  <div class="dropdown-menu dropdown-menu-small">
                    <a class="dropdown-item text-danger" onclick="logout()">
                      <i class="material-icons text-danger">&#xE879;</i> Logout </a>
                  </div>
                </li>
              </ul>
            </nav>
          </div>
          <!-- / .main-navbar -->
          <div class="main-content-container container-fluid px-4">
            <!-- Small Stats Blocks -->
            <div class="row">
              <div class="col-lg col-md-6 col-sm-6 mb-4">
                <div class="stats-small stats-small--1 card card-small">
                  <div class="card-body p-0 d-flex">
                    <div class="d-flex flex-column m-auto">
                      <div class="stats-small__data text-center" id="number_formations">
                        <span class="stats-small__label text-uppercase">Formations</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg col-md-6 col-sm-6 mb-4">
                <div class="stats-small stats-small--1 card card-small">
                  <div class="card-body p-0 d-flex">
                    <div class="d-flex flex-column m-auto">
                      <div class="stats-small__data text-center" id="number_students">
                        <span class="stats-small__label text-uppercase">Etudiants</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg col-md-4 col-sm-6 mb-4">
                <div class="stats-small stats-small--1 card card-small">
                  <div class="card-body p-0 d-flex">
                    <div class="d-flex flex-column m-auto">
                      <div class="stats-small__data text-center" id="number_absences">
                        <span class="stats-small__label text-uppercase">Absences</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="col-lg col-md-4 col-sm-6 mb-4">
                <div class="stats-small stats-small--1 card card-small">
                  <div class="card-body p-0 d-flex">
                    <div class="d-flex flex-column m-auto">
                      <div class="stats-small__data text-center" id="number_documents">
                        <span class="stats-small__label text-uppercase">Documents</span>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>

          <!-- End Small Stats Blocks -->
            <div class="row">
              <!-- Users Stats -->
              <div class="col-lg-8 col-md-12 col-sm-12 mb-4">
                <div id="calendar"></div>
              </div>
              <div id="fullCalModal" class="modal fade">
        					<div class="modal-dialog">
        							<div class="modal-content">
        									<div class="modal-header">
        											<button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span> <span class="sr-only">close</span></button>
        											<h4 id="modalTitle" class="modal-title"></h4>
        									</div>
        									<div id="modalBody" class="modal-body"></div>
        									<!--<div id="modalBody2" class="modal-body"></div>-->
        									<div id="modalBody3" class="modal-body"></div>
        									<div class="modal-footer">
        											<button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        									</div>
        							</div>
        					</div>
        			</div>
              <!-- End Users Stats -->

              <!-- Top Referrals Component -->
              <div class="col-lg-4 col-md-6 col-sm-12 mb-4">
                <div class="card card-small">
                  <div class="card-header border-bottom">
                    <h6 class="m-0">Top Absences</h6>
                  </div>
                  <div class="card-body p-0">
                    <ul class="list-group list-group-small list-group-flush" id="top_absences">
                    </ul>
                  </div>
                </div>
              </div>
              <!-- End Top Referrals Component -->
            </div>
          </div>
          <footer class="main-footer d-flex p-2 px-3 bg-white border-top">
            <ul class="nav">
              <li class="nav-item">
                <a class="nav-link" onclick="home()">Accueil</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" onclick="formations()">Formations</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" onclick="absences()">Absences</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" onclick="documents()">Documents</a>
              </li>
              <li class="nav-item">
                <a class="nav-link" onclick="settings()">Settings</a>
              </li>
            </ul>
            <span class="copyright ml-auto my-auto mr-2">Copyright © 2018
              <a rel="nofollow">AcademyGeneva by RE|BORN</a>
            </span>
          </footer>
        </main>
      </div>
    </div>
  </body>
</html>

<%- include('./partials/footer'); -%>
<script src='http://fullcalendar.io/js/fullcalendar-2.1.1/lib/moment.min.js'></script>
<script src='http://fullcalendar.io/js/fullcalendar-2.1.1/lib/jquery.min.js'></script>
<script src="http://fullcalendar.io/js/fullcalendar-2.1.1/lib/jquery-ui.custom.min.js"></script>
<script src='http://fullcalendar.io/js/fullcalendar-2.1.1/fullcalendar.min.js'></script>
<script>
  var login = <%- JSON.stringify(login) %>;
  var sess = <%- JSON.stringify(sess) %>;
  var absence = <%- JSON.stringify(absences) %>;
  var documents = <%- JSON.stringify(documents) %>;
  var events = <%- JSON.stringify(events) %>;
  var classes = <%- JSON.stringify(classes) %>;
  var students = <%- JSON.stringify(students) %>;
  var absences_top = <%- JSON.stringify(absences_top) %>;

  $(document).ready(function() {
    $('#number_formations').append('<h6 class="stats-small__value count my-3">' + classes.length + '</h6>');
    $('#number_students').append('<h6 class="stats-small__value count my-3">' + students.length + '</h6>');
    $('#number_absences').append('<h6 class="stats-small__value count my-3">' + absence.length + '</h6>');
    $('#number_documents').append('<h6 class="stats-small__value count my-3">' + documents.length + '</h6>');
    for(var i in absences_top)
      $('#top_absences').append('<li class="list-group-item d-flex px-3"><span class="text-semibold text-fiord-blue">' + absences_top[i].PRENOM_ELEVE + ' ' + absences_top[i].NOM_ELEVE + '</span><span class="ml-auto text-right text-semibold text-reagent-gray">' + absences_top[i].count + '</span></li>');

    // Ajout d'un evenement
    $('#addEvent').click(function(){
      var nom_event = '';
      socket.emit('req_add_questionnaire', nom_event);
      socket.on('res_add_questionnaire', function(id_quest){
      document.location.href = './add_event';
      });
    });

    $(function() {

      $('#calendar').fullCalendar({
        themeSystem: 'bootstrap4',
        header: {
          left: 'prev,next today',
          center: 'title',
          right: 'month,agendaWeek,agendaDay,listMonth'
        },
        weekNumbers: true,
        eventLimit: true, // allow "more" link when too many events
        events: 'https://fullcalendar.io/demo-events.json'
      });

    });

  });

</script>
